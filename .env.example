# ================================
# 数据库配置
# ================================
DB_PASSWORD=your_secure_password_here

# ================================
# Lighter DEX 配置
# ================================
# Lighter 主网 API 地址
LIGHTER_BASE_URL=https://mainnet.zklighter.elliot.ai

# 你的以太坊钱包私钥（用于 Lighter 交易）
LIGHTER_ETH_PRIVATE_KEY=0x...your_eth_private_key...

# Lighter API Key 私钥
LIGHTER_API_KEY_PRIVATE_KEY=0x...your_api_key_private_key...

# Lighter 账户索引（通常为 0）
LIGHTER_ACCOUNT_INDEX=0

# Lighter API Key 索引（2-254，0保留给桌面端，1保留给移动端）
LIGHTER_API_KEY_INDEX=2

# ================================
# 币安配置
# ================================
# 币安 API Key
BINANCE_API_KEY=your_binance_api_key

# 币安 API Secret
BINANCE_API_SECRET=your_binance_api_secret

# 是否使用测试网（true/false）
BINANCE_TESTNET=false

# ================================
# Telegram 通知配置（可选）
# ================================
# Telegram Bot Token
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Chat ID
TELEGRAM_CHAT_ID=your_chat_id

# ================================
# 应用配置
# ================================
# JWT 密钥（用于 API 认证）
SECRET_KEY=your-very-secure-secret-key-change-this-in-production

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ================================
# 交易默认配置（可在界面修改）
# ================================
# 费率阈值（例如 0.01 = 1%）
DEFAULT_FUNDING_RATE_THRESHOLD=0.01

# 单笔建仓金额（USDC）
DEFAULT_POSITION_SIZE_PER_ORDER=100.0

# 最大持仓金额（USDC）
DEFAULT_MAX_TOTAL_POSITION=1000.0

# 最大持仓不平衡金额（USDC）
DEFAULT_MAX_IMBALANCE=200.0

# 总仓位杠杆倍数
DEFAULT_TOTAL_LEVERAGE=3

# 止损百分比（0.20 = 20%）
DEFAULT_STOP_LOSS_PERCENT=0.20

# 止盈百分比（0.20 = 20%）
DEFAULT_TAKE_PROFIT_PERCENT=0.20
